<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

   android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context="info.hoang8f.fbutton.demo.MainActivity"
    android:weightSum="1">


    <info.hoang8f.widget.FButton
        android:id="@+id/user_reg_button"
        android:layout_width="200dp"
        android:layout_marginRight="750dip"
        fbutton:buttonColor="@color/fbutton_color_sun_flower"
        android:layout_gravity="center_vertical"
        android:text="User Registration"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="90dp"
        android:layout_height="wrap_content"/>

    <info.hoang8f.widget.FButton
       android:id="@+id/sensor_reg_button"
        android:layout_width="200dp"
        android:layout_marginRight="750dip"
        fbutton:buttonColor="@color/fbutton_color_sun_flower"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:text="Sensor Registration"
        android:layout_marginLeft="90dp" />




</RelativeLayout>
